{
    "manifest_version": 2,
    "name": "Twitter/X Scroll Limiter",
    "version": "1.0",

    "description": "Disable doom scrolling! Limit the number of posts you can scroll",
    
    "content_scripts": [
        {
            "matches": [
                "*://*.x.com/*", 
                "*://*.twitter.com/*"],
            "js": ["limitPosts.js"]
        }
    ],

    "permissions": [
        "storage",
        "activeTab"
    ],

    "browser_action": {
        "default_title": "X Scroll limiter",
        "default_popup": "popup/select_options.html"
    }

}